{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@sale/*": ["./src/modules/sale/*"],
      "@item/*": ["./src/modules/item/*"],
      "@customer/*": ["./src/modules/customer/*"],
      "@core/*": ["./src/core/*"],
      "@entities/*": ["./src/entities/*"]
    }
  }
}
